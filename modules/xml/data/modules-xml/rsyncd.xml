<module>
 <v-rsyncd
  name="Rsync Daemon (rsyncd)"
  provides="rsyncd"
  requires="mount-local">

  <execute id="daemon" code="/usr/bin/rsync --daemon --no-detach ${configuration_services_rsyncd_options}" />

  <restart b="yes" />
  <need-files s="/usr/bin/rsync" />
  <variables s="configuration-services-rsyncd/.*" />
 </v-rsyncd>
</module>
