<einit prefix="services-virtual-module">
 <daemon id="daemon-bluez-hcid"
  name="Bluetooth (HCId)"
  provides="bluetooth-hci"
  requires="mount-critical"
  after="^(kern-|modules)"
  command="sleep 1 ; /usr/sbin/hcid -n -f /etc/bluetooth/hcid.conf"
  restart="yes"
  need-files="/usr/sbin/hcid" />
</einit>
