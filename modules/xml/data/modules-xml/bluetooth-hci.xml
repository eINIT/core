<module>
 <v-bluez-hcid
  name="Bluetooth (HCId)"
  provides="bluetooth-hci"
  requires="mount-critical"
  after="^(kern-|modules)">

  <execute id="daemon" code="sleep 1 ; /usr/sbin/hcid -n -f /etc/bluetooth/hcid.conf" />

  <need-files s="/usr/sbin/hcid" />
  <restart b="yes" />
 </v-bluez-hcid>
</module>
