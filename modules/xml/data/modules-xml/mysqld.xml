<module>
 <v-mysqld
  name="Database (MySQL)"
  provides="mysqld"
  requires="mount-local">

  <execute id="daemon" code="/usr/sbin/mysqld --defaults-file=${configuration_services_mysqld_defaults}" />

  <restart b="yes" />
  <need-files s="/usr/sbin/mysqld" />
  <variables s="configuration-services-mysqld/.*" />
 </v-mysqld>
</module>
