<einit prefix="services-virtual-module">
 <shell id="shell-microcode"
  name="Microcode-ctl (Intel processor microcode update utility)"
  provides="microcode_ctl"
  requires="mount-local"
  after="^(kern-|modules)"
  enable="/usr/sbin/microcode_ctl -qu -d ${configuration_services_microcode_ctl_dev}"
  need-files="/usr/sbin/microcode_ctl"
  variables="configuration-services-microcode-ctl/.*" />
</einit>

