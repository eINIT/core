<module>
 <daemon id="daemon-nmbd"
  name="Samba NetBIOS name server (nmbd)"
  provides="nmbd"
  requires="network-minimal"
  after="cupsd"
  pid="/var/run/samba/nmbd.pid"
  prepare="if [ ! -d /var/run/samba ] ; then mkdir /var/run/samba ; fi ; /bin/true"
  command="nmbd -F ${configuration_services_nmbd_options}"
  execute:reload="killall -HUP nmbd"
  restart="yes"
  variables="configuration-services-nmbd/.*" />
</module>
