<einit prefix="services-virtual-module">
 <daemon id="daemon-timidity"
  name="Timidity++ Virtual MIDI Sequencer (timidity)"
  provides="timidity"
  requires="alsa:mount-system"
  command="/usr/bin/timidity -iA ${configuration_services_timidity_options}"
  need-files="/usr/bin/timidity"
  restart="yes"
  variables="configuration-services-timidity/.*" />
</einit>
