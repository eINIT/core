<einit prefix="services-virtual-module">
 <daemon id="daemon-hald"
  name="Hardware Abstraction Layer"
  provides="hal"
  after="logger"
  requires="mount-critical:dbus"
  pid="/var/run/hald.pid"
  command="/usr/sbin/hald --daemon=yes --use-syslog --verbose=no"
  need-files="/usr/sbin/hald"
  restart="yes"
  options="forking" />
</einit>
