<module>
 <v-hald
  name="Hardware Abstraction Layer"
  provides="hal"
  after="logger:displaymanager"
  requires="mount-critical:dbus">

  <execute id="daemon" code="hald --daemon=yes --use-syslog --verbose=no" />

  <options s="forking" />
  <restart b="yes" />
  <need-files s="hald" />
  <pidfile s="/var/run/hald.pid" />
 </v-hald>
</module>
