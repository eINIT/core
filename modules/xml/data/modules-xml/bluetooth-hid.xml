<module>
 <v-bluez-hidd
  name="Bluetooth (HIDd)"
  provides="bluetooth-hid"
  requires="mount-critical:bluetooth-hci"
  after="^(kern-|modules)">

  <execute id="daemon" code="/usr/bin/hidd ${configuration_services_bluetooth_hid_options} --server -n" />

  <variables s="configuration-services-bluetooth-hid/.*" />
  <need-files s="/usr/bin/hidd" />
  <restart b="yes" />
 </v-bluez-hidd>
</module>
