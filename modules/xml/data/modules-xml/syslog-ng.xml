<module>
 <v-syslog-ng
  name="Syslogger (syslog-ng)"
  provides="syslog-ng:logger"
  requires="mount-critical">

  <execute id="daemon" code="pexec-options dont-close-stdin; /usr/sbin/syslog-ng" />

  <pidfile s="/var/run/syslog-ng.pid" />
  <restart b="yes" />
  <need-files s="/usr/sbin/syslog-ng" />
  <options s="forking" />
 </v-syslog-ng>
</module>
