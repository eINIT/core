<module>
 <daemon id="daemon-syslog-ng"
  name="Syslogger (syslog-ng)"
  provides="syslog-ng:logger"
  requires="mount-critical"
  pid="/var/run/syslog-ng.pid"
  command="pexec-options dont-close-stdin; /usr/sbin/syslog-ng"
  options="forking"
  restart="yes"
  need-files="/usr/sbin/syslog-ng" />
</module>
