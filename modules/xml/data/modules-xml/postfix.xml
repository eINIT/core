<module>
 <v-postfix
  name="postfix"
  provides="mta:postfix"
  requires="network:mount-critical">

  <execute id="enable" code="/usr/sbin/postfix start" user="postfix" />
  <execute id="disable" code="/usr/sbin/postfix stop" user="postfix" />
  <execute id="reload" code="/usr/sbin/postfix reload" user="postfix" />
 </v-postfix>
</module>
