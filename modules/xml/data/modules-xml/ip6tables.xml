<module>
 <shell id="shell-ip6tables"
  name="Ipv6 Linux firewall, NAT and packet mangling tools"
  provides="ip6tables"
  requires="network"
  prepare="touch ${configuration_services_iptables_rules_file} ;
           chmod 0600 ${configuration_services_iptables_rules_file}"
  enable="/sbin/ip6tables-restore ${configuration_services_iptables_options} &lt; ${configuration_services_iptables_rules_file}"
  disable="if [ &quot;${configuration_services_iptables_save_on_stop}&quot; = &quot;yes&quot; ];then
                /sbin/ip6tables-save ${configuration_services_iptables_options} &gt; ${configuration_services_iptables_rules_file} ;
           else
                /dev/true ;
           fi"
  need-files="/sbin/ip6tables-save:/sbin/ip6tables-restore"
  variables="configuration-services-iptables/.*" />
</module>
