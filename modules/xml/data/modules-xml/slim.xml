<module>
 <v-slim
  name="Simple LogIn Manager (slim)"
  provides="x11:displaymanager"
  requires="mount-critical">

  <execute id="prepare" code="rm -rf /var/run/slim.*" />
  <execute id="enable" code="slim -d" />
  <execute id="disable" code="killall -9 slim" />

  <need-files s="slim:X" />
 </v-slim>
</module>
