<einit prefix="services-virtual-module">
 <shell id="shell-sensors"
  name="lm_sensors (sensors)"
  provides="sensors"
  requires="mount-critical"
  after="^(kern-|modules)"
  enable="/usr/bin/sensors -s ${configuration_services_sensors_options}"
  disable="/bin/true"
  variables="configuration-services-sensors/.*" />
</einit>
