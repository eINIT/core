<module>
 <daemon id="daemon-klive"
  name="Kernel Configuration Reporting (klive)"
  provides="klive"
  requires="network:mount-critical:logger"
  pid="/var/run/klive.pid"
  command="/usr/bin/twistd --nodaemon --pidfile=/var/run/klive.pid --uid klive --syslog -oy /usr/share/klive/klive.tac"
  restart="yes" />
</module>
