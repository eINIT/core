<module>
 <daemon id="daemon-smbd"
  name="Samba daemon (smbd)"
  provides="smbd"
  after="mount-critical:winbindd:cupsd"
  requires="nmbd"
  command="/usr/sbin/smbd -F ${configuration_services_smbd_options}"
  execute:reload="killall -HUP smbd"
  restart="yes"
  need-files="/usr/sbin/smbd"
  variables="configuration-services-smbd/.*" />
</module>
