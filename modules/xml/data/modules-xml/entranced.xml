<module>
 <v-entranced
  name="EntranceD"
  provides="displaymanager:entranced"
  requires="mount-critical:network-minimal">

  <execute id="daemon" code="/usr/sbin/entranced" />

  <need-files s="/usr/sbin/entranced" />
  <environment DISPLAY=":0.0" HOME="/root" />
  <restart b="yes" />
 </v-entranced>
</module>
