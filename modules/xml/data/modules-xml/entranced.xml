<module>
 <v-entranced
  name="EntranceD"
  provides="displaymanager:entranced"
  requires="mount-critical">

  <execute id="enable" code="/usr/sbin/entranced" />
  <execute id="disable" code="killall entranced" />

  <need-files s="/usr/sbin/entranced" />
  <environment DISPLAY=":0.0" HOME="/root" />
 </v-entranced>
</module>
