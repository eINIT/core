<module>
 <v-bluez-rfcomm
  name="Bluetooth (RFCOMM)"
  provides="bluetooth-rfcomm"
  requires="mount-local:bluetooth-hci"
  after="^(kern-|modules)">

  <execute id="enable" code="/usr/bin/rfcomm -f ${configuration_services_bluetooth_rfcomm_file} bind all" />
  <execute id="disable" code="/usr/bin/rfcomm release all" />

  <variables s="configuration-services-bluetooth-rfcomm/.*" />
 </v-bluez-rfcomm>
</module>
