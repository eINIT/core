<module>
 <shell id="shell-gpm"
  name="Console mouse services (GPM)"
  provides="gpm"
  requires="tty"
  enable="/usr/sbin/gpm -m ${configuration_services_gpm_device} -t ${configuration_services_gpm_type} ${configuration_services_gpm_options}"
  disable="killall gpm &amp;&gt;/dev/null"
  restart="yes"
  variables="configuration-services-gpm/.*" />
</module>
