<module>
 <v-mythtv
  name="MythTV Backend"
  provides="mythtv"
  requires="network:mount-critical"
  after="^(kern-|modules)">

  <execute id="enable" code="/usr/bin/mythbackend --logfile /var/log/mythtv/mythbackend --daemon" />
  <execute id="disable" code="killall mythbackend; true" />

  <environment HOME="/etc/mythtv" />
 </v-mythtv>
</module>
