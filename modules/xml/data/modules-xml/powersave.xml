<module>
 <v-powersave
  name="Powersave"
  provides="powersave"
  requires="mount-critical:hal:acpid">

  <execute id="daemon" code="/usr/sbin/powersaved $(if [ -S /var/run/acpid.socket ]] ; then echo '-f /var/run/acpid.socket' ; fi)" />

  <need-files s="/usr/sbin/powersaved" />
  <restart b="yes" />
 </v-powersave>
</module>
