<einit prefix="services-virtual-module">
 <daemon id="daemon-dbus"
  name="D-BUS system messagebus"
  provides="dbus"
  requires="mount-critical"
  after="fqdn"
  pid="/var/run/dbus.pid"
  prepare="rm -rf /var/run/dbus; mkdir -p /var/run/dbus; dbus-uuidgen --ensure"
  command="pexec-options dont-close-stdin; dbus-daemon --system --fork"
  cleanup="if [ -S /var/run/dbus/system_bus_socket ]; then rm -f /var/run/dbus/system_bus_socket; fi"
  options="forking"
  restart="yes" />
</einit>
