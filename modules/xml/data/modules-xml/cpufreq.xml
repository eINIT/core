<module>
 <v-cpufreq
  name="Cpufreq Governor"
  provides="cpufreq"
  requires="mount-critical:acpid">

  <execute id="enable" code="for i in ${configuration_services_cpufreq_cpus};
          	do /usr/bin/cpufreq-set --cpu $i --governor ${configuration_services_cpufreq_governor} ;
          done" />
  <execute id="disable" code="for i in ${configuration_services_cpufreq_cpus} ;
           	do /usr/bin/cpufreq-set --cpu $i --governor performance ;
           done" />

  <variables s="configuration-services-cpufreq/.*" />
 </v-cpufreq>
</module>
