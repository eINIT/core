<module>
 <v-ivman
  name="Ikke's Volume Manager (ivman)"
  provides="ivman"
  requires="hal">

  <execute id="daemon" code="/usr/bin/ivman --system --nofork" user="ivman" group="plugdev" />

  <pidfile s="/var/run/ivman.pid" />
  <restart b="yes" />
  <need-files s="/usr/bin/ivman" />
 </v-ivman>
</module>
