<module>
 <v-winbindd
  name="Samba Winbind daemon (winbindd)"
  provides="winbindd"
  after="cupsd"
  before="smbd"
  requires="nmbd">

  <execute id="daemon" code="/usr/sbin/winbindd -F ${configuration_services_winbindd_options}" />
  <execute id="reload" code="killall -HUP winbindd" />

  <restart b="yes" />
  <need-files s="/usr/sbin/winbindd" />
  <variables s="configuration-services-winbindd/.*" />
 </v-winbindd>
</module>
