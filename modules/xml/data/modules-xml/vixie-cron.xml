<module>
 <v-vixie-cron
  name="Cron (Vixie)"
  provides="cron"
  requires="mount-local">

  <execute id="daemon" code="/usr/sbin/cron -n ${configuration_services_vixie_cron_options}" />

  <restart b="yes" />
  <need-files s="/usr/sbin/cron" />
  <variables s="configuration-services-vixie-cron/.*" />
 </v-vixie-cron>
</module>
