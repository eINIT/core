<einit prefix="services-virtual-module">
 <daemon id="daemon-powersave"
  name="Powersave"
  provides="powersave"
  requires="mount-critical:hal:acpid"
  command="/usr/sbin/powersaved $([[ -S /var/run/acpid.socket ]] &amp;&amp; echo '-f /var/run/acpid.socket')"
  restart="yes"
  need-files="/usr/sbin/powersaved" />
</einit>
