<einit prefix="services-virtual-module">
 <daemon id="shell-bluez-hidd"
  name="Bluetooth (HIDd)"
  provides="bluetooth-hid"
  requires="mount-critical:kern-bluetooth:bluetooth-hci"
  command="/usr/bin/hidd ${configuration_services_bluetooth_hid_options} --server -n"
  restart="yes"
  variables="configuration-services-bluetooth-hid/.*"
  need-files="/usr/bin/hidd" />
</einit>
