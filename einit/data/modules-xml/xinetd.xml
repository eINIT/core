<einit prefix="services-virtual-module">
 <daemon id="daemon-xinetd"
  name="Internet Services Daemon (xinetd)"
  provides="xinetd"
  requires="network:mount-system"
  command="unset -f `declare -F | sed 's:declare -f::g'`
           /usr/sbin/xinetd ${configuration_program_options_xinetd_options}"
  execute:reload="killall -HUP xinetd &>/dev/null"
  execute:dump="killall -USR1 xinetd &>/dev/null"
  execute:check="killall -IOT xinetd &>/dev/null"
  need-files="/usr/sbin/xinetd"
  restart="yes"
  variables="configuration-program-options-xinetd/.*" />
</einit>
