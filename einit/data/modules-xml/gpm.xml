<einit prefix="services-virtual-module">
 <shell id="shell-gpm"
  name="Console mouse services (GPM)"
  provides="gpm"
  requires="tty"
  enable="/usr/sbin/gpm -m ${configuration_peripherals_pointing_device_gpm_device} -t ${configuration_peripherals_pointing_device_gpm_type} ${configuration_peripherals_pointing_device_gpm_options}"
  disable="killall gpm"
  restart="yes"
  variables="configuration-peripherals-pointing-device-gpm/.*" />
</einit>