<einit prefix="services-virtual-module">
 <daemon id="daemon-kdm"
  name="The KDE Display Manager (kdm)"
  provides="x11:displaymanager"
  requires="mount-critical:network-minimal"
  pid="/var/run/kdm.pid"
  command="/usr/kde/3.5/bin/kdm -nodaemon"
  restart="yes"
  need-files="/usr/kde/3.5/bin/kdm"/>
</einit>
