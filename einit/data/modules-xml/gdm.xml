<einit prefix="services-virtual-module"> 
 <shell id="shell-gdm"
  name="gdm - The GNOME Display Manager"
  provides="x11:displaymanager"
  requires="net-lo:mount/critical"
  pid="/var/run/gdm.pid"
  prepare="[ ! -e /var/log/gdm ] &amp;&amp; mkdir /var/log/gdm"
  enable="gdm"
  disable="killall -9 gdm"
  restart="yes" />
</einit>
