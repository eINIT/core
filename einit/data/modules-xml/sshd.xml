<einit prefix="services-virtual-module">
 <daemon id="daemon-sshd"
  name="SSH daemon (sshd)"
  provides="sshd"
  after="network"
  requires="network-minimal:mount-critical"
  command="/usr/sbin/sshd -D ${configuration_services_sshd_options}"
  restart="yes"
  need-files="/usr/sbin/sshd"
  variables="configuration-services-sshd/.*" />
</einit>
