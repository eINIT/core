<einit prefix="services-virtual-module">
 <shell id="shell-nmbd"
  name="NetBIOS name server"
  provides="nmbd"
  after="mount-local:dbus:hal:kern-.*"
  requires="fqdn:net-lo"
  pid="/var/run/samba/nmbd.pid"
  prepare="[ ! -e /var/run/samba ] &amp;&amp; mkdir /var/run/samba;
           /bin/true;"
  enable="nmbd -D"
  disable="killall -9 nmbd"
  restart="yes" />
</einit>
