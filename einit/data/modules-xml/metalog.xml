<einit prefix="services-virtual-module">
 <daemon id="daemon-metalog"
  name="Syslogger (metalog)"
  provides="metalog:logger"
  requires="mount-critical:hwclock:fqdn"
  pid="/var/run/metalog.pid"
  command="/usr/sbin/metalog --pidfile /var/run/metalog.pid ${configuration_program_options_metalog}"
  execute:buffer="killall -USR2 metalog"
  execute:unbuffer="killall -USR1 metalog"
  restart="yes"
  need-files="/usr/sbin/metalog"
  variables="configuration-program-options-metalog" />
</einit>
