<!-- thanks, rmh3093! -->
     <daemon id="deamon-dhcdbd"
      name="dhcdbd"
      provides="dhcdbd"
      requires="dbus"
      command="rm -f /var/run/dhcdbd.pid; dhcdbd -sn"
      restart="yes" />

     <daemon id="daemon-NetworkManager"
      name="NetworkManager"
