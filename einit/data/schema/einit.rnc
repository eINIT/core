start = eINIT | Module | Network

eINIT = element einit {
 attribute prefix { text }?,
 element core {
  element xml-validator {
   attribute command { text }
  }?,
  element settings {
   element xml-parser {
    element auto-create-missing-directories {
     BooleanAttribute
    }?
   }?
  }?
 }*,
 element configuration {
  element * { text }*
 }*,
 element services {
  element * { text }*
 }*,
 element special {
  element * { text }*
 }*
}

BooleanAttribute = attribute b { Boolean }
StringAttribute = attribute s { text }
Boolean = "yes" | "no" | "true" | "false" | "enabled" | "disabled"

include "einit-module.rnc"
include "einit-network.rnc"
