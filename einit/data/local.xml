<?xml version="1.0" encoding="UTF-8" ?>
<einit>
<!-- you will need to modify this file -->
 <configuration>
  <network>
   <hostname s="localhost" />
   <domainname s="local" />

   <wireless>
    <ssid s="default" />
   </wireless>

<!-- interface configuration moved to network.xml, please modify that file -->

<!--   <interfaces> -->
<!-- examples for "new" network configuration:
     just add nodes like the ones below for interface X and add net-X to
     the network group below. no need to mess with templates no more =) -->
<!--    <lo control="none" ip="iproute2" address="127.0.0.1/8" network="127.0.0.0/8" />
    <eth0 control="none" ip="pump" kernel-module="e1000" />
    <wlan0 control="wpa_supplicant" driver="wext" config="/etc/wpa_supplicant/wpa_supplicant.conf" ip="pump" kernel-module="ipw3945" /> -->
<!--    <ppp0 control="wvdial" profile="m610" kernel-module="cdc_acm" /> -->
<!--   </interfaces> -->
  </network>

  <kernel>
   <modules>
    <usb s="" />
    <bluetooth s="" />
    <hid s="" />
    <sound s="" />
    <video s="" />
    <sensors s="i2c-isa eeprom w83627ehf" />
    <dvb s="b2c2-flexcop-pci" />
    <ethernet s="uli526x" />
    <arbitrary s="evdev psmouse" />
   </modules>

   <module>
    <ath0 s="ath_pci" />
   </module>
  </kernel>

  <compatibility>
<!-- utmp/wtmp management: you'll need to enable the utmp service
     BUG: not implemented, yet -->
   <sysv utmp="yes" wtmp="yes" />
  </compatibility>
 </configuration>

 <services>
  <prefer>
   <displaymanager s="daemon-kdm:daemon-entrance" />
   <logger s="daemon-metalog:daemon-syslog-ng:daemon-syslog" />
   <kern-alsa s="shell-kern-audio-alsa" />
<!-- use /etc/modules.autoload.d/kernel-2.6 to autoload modules: -->
   <kern-arbitrary s="shell-kern-module-autoload.d" />
   <antivirus s="shell-clamd" />
  </prefer>

  <alias>
<!-- service groups -->
<!-- you really don't want to remove net-lo or fqdn from network, or stuff will break -->
   <network group="fqdn:net-lo:net-eth0" seq="most" />
<!-- or kern-ati if you have an ATI card -->
   <video group="kern-nvidia" seq="any-iop" />
<!-- kern-sound is the list-based module loader.
     if you want alsa module auto-detection, replace with kern-alsa -->
   <audio group="alsa:kern-sound" seq="most" />
   <avahi group="avahi-dnsconfd" seq="any-iop" />
<!-- add winbindd if you need it -->
   <samba group="smbd:nmbd" seq="all" />
   <printing group="hpiod:hplip:cupsd" seq="any-iop" />
  </alias>

  <!-- example alias: localmount is the same as mount-local -->
  <!--  <alias id="localmount" s="mount-local" /> -->

  <!-- example override: on regular systems, einit-tty will only need mount-system, but if you'd like
       to use quingy and have the terminals controlled using einit-tty, then you will need mount-critical
     if /usr is on its own partition (due to libquingy) -->
<!--  <override>
 <module id="einit-tty" requires="mount-critical" />
  </override> -->

<!-- example override, probably useful for lvm users:
     this should make einit mount mount-system-nodes, i.e. /dev, /sys and /proc
     before trying to mount the root-filesystem -->
<!--  <override>
 <module id="einit-mount-root" requires="mount-system" />
   <module id="einit-mount-system" requires="sysconf" />
  </override> -->
 </services>
</einit>
