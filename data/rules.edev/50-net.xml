   <devicefile-rule SUBSYSTEM="^ppp$"
                    chmod="0600"
                    devicefile="/dev/${DEVPATH_BASE}" />

   <devicefile-rule SUBSYSTEM="^misc$"
                    DEVPATH_BASE="^tun$"
                    chmod="0666"
                    devicefile="/dev/net/tun" />
  </edev>
 </configuration>
</einit>
