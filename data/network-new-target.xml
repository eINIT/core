<einit prefix="configuration-network">
 <hostname s="Redman"/>
 <domainname s="brcg.net"/>
 <interfaces>

  <eth0>
   <address>
    <ipv4 address="dhcp" />
    <ipv4 address="10.2.0.2" location="^work$" />
    <ipv4 address="192.168.0.1"  location="^school$" />
    <ipv6 address="fe::01:03" />
   </address>
   <dhcp-client s="pump" />
   <wpa_supplicant>
    <config s="/etc/wpa_supplicant/wpa_supplicant.conf" location="^school$" />
    <config s="/etc/wpa_supplicant/wpa_supplicant_any.conf" location="^(work|girlfriend)$" />
    <driver s="wext" />
   </wpa_supplicant>

   <dont-wait b="yes" />
   <ignore b="yes" />
  </eth0>

 </interfaces>
 <routes>
  <default_gw s="192.168.0.1" />
  <eth1 s="10.160.0.0" />
 </routes>
 <nameservers s="192.168.0.2:10.160.0.2" />
</einit>
